---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import { Icon } from "astro-icon/components";
import * as Profile from "./post/profile.md";
import "tippy.js/dist/tippy.css";
---

<Layout title="sbtn.tokyo">
  <main class="text-white">
    <h1 class="text-4xl font-bold my-12">sbtn.tokyo</h1>
    <h2 class="text-2xl font-bold my-8" id="profile">
      {Profile.frontmatter.title}
    </h2>
    <img
      src="/saisabo10.jpg"
      alt="さぼてんのアイコン"
      class="w-48 h-48 rounded-full my-8"
    />
    <article class="prose prose-invert border-white max-w-none text-white">
      <Profile.Content />
    </article>
    <h2 class="text-2xl font-bold my-8" id="services">提供サービス</h2>
    <ul role="list" class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <Card
        icon="mdi:minecraft"
        href="https://mc.sbtn.tokyo/"
        title="SBTN Server（仮）"
        body="定期的に活発になるマイクラ"
      />
      <Card
        icon="fa-brands:discord"
        href="https://discord.com/invite/GKVYVeNKSD"
        title="【令和最新版】サボテンサーバー"
        body="みんなでワイワイDiscord鯖"
      />
      <Card
        icon="ri:bluesky-fill"
        href="https://bsky.app/profile/saisabo10.bsky.social"
        title="Bluesky"
        body="たまに浮上してます"
      />
      <Card
        icon="ph:handshake-fill"
        href="https://twitter.com/saisabo10"
        title="エンカ"
        body="いつでも、どこでも。"
      />
    </ul>
    <h2 class="text-2xl font-bold my-8" id="contact">お問い合わせ</h2>
    <h3 class="text-xl font-bold my-4">&gt; カスタマーサポート</h3>
    <p class="text-lg font-medium">@saisabo10</p>
    <div class="flex flex-row gap-3 mt-4 mb-8">
      <a
        href="https://twitter.com/saisabo10"
        id="x-twitter"
        rel="noopener noreferrer"
        target="_blank"
      >
        <Icon name="fa6-brands:x-twitter" class="w-8 h-8" />
      </a>
      <a
        href="https://bsky.app/profile/saisabo10.bsky.social"
        id="bluesky"
        rel="noopener noreferrer"
        target="_blank"
      >
        <Icon name="ri:bluesky-fill" class="w-8 h-8" />
      </a>
      <a
        href="https://misskey.io/@saisabo10"
        id="misskey"
        rel="noopener noreferrer"
        target="_blank"
      >
        <Icon name="simple-icons:misskey" class="w-8 h-8" />
      </a>
    </div>
    <h4 class="text-xl font-bold my-4">&gt; テクニカルサポート</h4>
    <p class="text-lg font-medium">@wamo</p>
    <div class="flex flex-row gap-3 mt-4 mb-8">
      <a
        href="https://twitter.com/scgame_m"
        id="x-twitter"
        rel="noopener noreferrer"
        target="_blank"
      >
        <Icon name="fa6-brands:x-twitter" class="w-8 h-8" />
      </a>
      <a
        href="https://bsky.app/profile/wmsci.com"
        id="bluesky"
        rel="noopener noreferrer"
        target="_blank"
      >
        <Icon name="ri:bluesky-fill" class="w-8 h-8" />
      </a>
      <a
        href="https://misskey.io/@wamo"
        id="misskey"
        rel="noopener noreferrer"
        target="_blank"
      >
        <Icon name="simple-icons:misskey" class="w-8 h-8" />
      </a>
      <a
        href="https://mstdn.jp/@scgame_m"
        id="mastodon"
        rel="noopener noreferrer"
        target="_blank"
      >
        <Icon name="fa6-brands:mastodon" class="w-8 h-8" />
      </a>
      <a
        href="https://t.me/wamosc"
        id="telegram"
        rel="noopener noreferrer"
        target="_blank"
      >
        <Icon name="fa6-brands:telegram" class="w-8 h-8" />
      </a>
    </div>
    <p class="mt-24">&copy; 2023 sbtn.tokyo</p>
    <p class="mt-4">Source code is available at <a href="https://github.com/sbtn-tokyo/sbtn.tokyo" target="_blank" rel="noopener noreferrer" class="underline">GitHub</a> under Apache-2.0 license.</p>
    <p class="mt-4">Contents are available under <a href="https://creativecommons.org/licenses/by-nd/4.0/" target="_blank" rel="noopener noreferrer" class="underline">CC BY-ND 4.0</a> license. <img src="https://mirrors.creativecommons.org/presskit/buttons/88x31/png/by-nd.png" class="inline h-8 ml-2" /></p>
    <p class="mt-4">The profile icons at the top of the website are copyrighted materials and may not be reproduced, modified or redistributed without the permission of the author.</p>
  </main>
</Layout>

<script>
  import tippy from "tippy.js";
  tippy("#x-twitter", {
    content: "X (旧Twitter)",
    placement: "top",
  });
  tippy("#misskey", {
    content: "misskey.io",
    placement: "top",
  });
  tippy("#bluesky", {
    content: "Bluesky",
    placement: "top",
  });
  tippy("#mastodon", {
    content: "mstdn.jp",
    placement: "top",
  });
  tippy("#telegram", {
    content: "Telegram",
    placement: "top",
  });
</script>
