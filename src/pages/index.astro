---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="sbtn.tokyo">
  <main class="text-white">
    <h1 class="text-4xl font-bold my-12">sbtn.tokyo</h1>
    <h3 class="text-2xl font-bold my-4">提供サービス</h3>
    <ul role="list" class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <Card
        icon="mdi:minecraft"
        href="https://mc.sbtn.tokyo/"
        title="SBTN Server（仮）"
        body="Minecraft鯖"
      />
      <Card
        icon="fa-brands:discord"
        href="#"
        title="【令和最新版】サボテンサーバー"
        body="通話のためのDiscord鯖"
      />
    </ul>
  </main>
</Layout>
